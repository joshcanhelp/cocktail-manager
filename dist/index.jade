doctype html
html(lang="en")
  head
    title= pageTitle
    link(rel="stylesheet", href="bootstrap.min.css")
    link(rel="stylesheet", href="bootstrap-theme.min.css")
    link(rel="stylesheet", href="style.css")
  body(role="document")
    .container
      .page-header
        h1 Jade - Cocktail Manager
      .container
        ul(class="nav nav-pills", id="view-nav")
          li(class="active")
            a(href="#view-cocktails", data-toggle="pill") View
          li
            a(href="#add-cocktails", data-toggle="pill") Add
        .tab-content
          div(class="tab-pane", id="view-cocktails")
            h2 View cocktails
            table(class="table table-striped")
              thead
                tr
                  th ID
                  th Name
                  th Category
                  th Tags
              tbody
                tr
                  td 1
                  td Perfect Margarita
                  td margarita
                  td tequila
                tr
                  td 2
                  td Perfect Manhattan
                  td manhattan
                  td whisky, vermouth
          div(class="tab-pane active", id="add-cocktails")
            h2 Add cocktails
            br
            form(class="form-horizontal")
              .form-group
                label(for="cocktailName",  class="col-sm-2 control-label") Name
                .col-sm-10
                  input(id="cocktailName", name="cocktailName", type="text", class="form-control")
              .form-group
                label(for="cocktailDesc",  class="col-sm-2 control-label") Description
                .col-sm-10
                  textarea(id="cocktailDesc", name="cocktailDesc", class="form-control", rows="3")
              .form-group
                label(class="col-sm-2 control-label") Ingredients
                .col-sm-2
                  label
                    small Amount
                  br
                  input(name="cocktailParts-amt-1", type="text", class="form-control")
                .col-sm-2
                  label
                    small Unit
                  br
                  select(name="cocktailParts-unit-1", class="form-control")
                    option(val="") Select...
                    option(val="oz") Ounces
                    option(val="tbl") Tablespoons
                    option(val="tsp") Teaspoons
                    option(val="dash") Dash
                .col-sm-6
                  label
                    small Ingredient
                  br
                  input(name="cocktailParts-name-1", type="text", class="form-control")
              .form-group
                .col-sm-12
                  p(class="text-right")
                    button(type="button", class="btn btn-default" id="add-ingredient") Add Ingredient

    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js")
    script(src="bootstrap.min.js")
    script(src="main.js")